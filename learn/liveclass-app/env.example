# ===========================================
# LiveClass Environment Configuration
# ===========================================
# Copy this file to .env and modify as needed

# ===========================================
# Application Settings
# ===========================================
APP_PORT=8080
# INSTANCE_ID=app-1  # Auto-generated if not set

# ===========================================
# MongoDB Settings
# ===========================================
MONGO_PORT=27017
MONGO_DB_NAME=liveclass
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10

# ===========================================
# Redis Settings (Multi-Instance Mode)
# ===========================================
# Enable for horizontal scaling / Kubernetes
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# ===========================================
# JWT Authentication
# ===========================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=72

# ===========================================
# Admin Credentials (First Run Only)
# ===========================================
ADMIN_EMAIL=admin@liveclass.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator

# ===========================================
# Cache Settings
# ===========================================
CACHE_ENABLED=true
USER_CACHE_TTL_SEC=300
BATCH_CACHE_TTL_SEC=60
SCHEDULE_CACHE_TTL_SEC=30

# ===========================================
# Performance Settings
# ===========================================
ENABLE_COMPRESSION=true
REQUEST_TIMEOUT_SEC=15
SHUTDOWN_TIMEOUT_SEC=30

# ===========================================
# TURN Server (Optional - for NAT traversal)
# ===========================================
# TURN_SERVERS=turn:turn.example.com:3478
# TURN_USERNAME=user
# TURN_PASSWORD=pass

# ===========================================
# MongoDB Express (Dev Only)
# ===========================================
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=admin123
